<h1 class="title"> Blog Index </h1> 


<div class="row">


<% @posts.each do |post| %>  
  <div class="col-sm-4">
   <div class="card">
     <div class="card-body">
       <h5 class="card-title"> <%= link_to post.title, post  %></h5>
       <p class="card-text"><%= post.content %></p>

      </div>
    </div>
  </div>
<% end %>
</div>

