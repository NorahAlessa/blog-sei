<h2 align="center">Posts</h2>


<div class="card-deck" >
  <% @posts.each do |post|  %>
    <div class="col-6 col-sm-3 col-md-3 p-2">
        <div class="card border-primary">
            <div class="card-body" style="text-align:center;">
            <div class="card-img-top"><%= image_tag(post.img, size: "100x100", alt: "Post Image",class: 'img_size')%></div>
                <h5 class="card-text" style="text-align:center; font-weight:bold; "> <br>
                    <%= post.title %>
                </h5>
                <h6 class="card-title" style="size:10px;">posted by:<br/>
                <%= post.user.email%>
            </h6>
                <button class="btn btn-link"> 
                 <%= link_to "More Info", post_path(post) %>
                </button>
            </div>
        </div>
    </div>
  <% end %>
</div>