<%= simple_form_for([@post, @post.comments.build]) do |f| %>
    <div class="col-lg-4 col-sm-12" >
    <div class="field form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control",required: true %>
    </div>
  
    <div class="field form-group">
      <%= f.label :comment %>
      <%= f.text_field :comment, class: "form-control" %>
    </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>

    <% end %>
