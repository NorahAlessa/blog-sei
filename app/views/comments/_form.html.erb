<%= form_for @comment do |form| %>
  <div class="input-field col s6" >
 
  <%= form.text_area :comment,placeholder:"write your comment here!", class: "form-control",required: true %>
</div>
<%if @post%>
<%= form.hidden_field :post_id, :value => @post.id%>
<%end%>
<div class="actions " style=" margin: 10px 5px 15px 20px; " >

<%= form.submit %>
</div>
  <% end %>