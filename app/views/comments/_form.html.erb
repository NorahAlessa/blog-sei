<%= simple_form_for @post.comments do |f| %>
    <div class="input-field col s6" >
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control",required: true %>
    </div>
  
    <div class="input-field col s6" >
      <%= f.label :comment %>
      <%= f.text_field :comment, class: "form-control" %>
    </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>

    <% end %>
